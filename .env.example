# ── App ──────────────────────────────────────────────────────────────
NODE_ENV=production

# ── PostgreSQL ────────────────────────────────────────────────────────
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=cordis
POSTGRES_USER=cordis
POSTGRES_PASSWORD=change_this_strong_password

# ── Redis ─────────────────────────────────────────────────────────────
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password

# ── JWT ───────────────────────────────────────────────────────────────
JWT_SECRET=change_this_jwt_secret_minimum_32_chars_long
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=change_this_refresh_secret_minimum_32_chars
JWT_REFRESH_EXPIRES_IN=30d

# ── Backend ───────────────────────────────────────────────────────────
PORT=4000
CORS_ORIGIN=https://yourdomain.com
UPLOAD_MAX_SIZE=5242880

# ── Frontend (Vite build args) ────────────────────────────────────────
VITE_API_URL=/api
VITE_SOCKET_URL=
